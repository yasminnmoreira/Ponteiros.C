#include <stdio.h>

int main() {
    int pontos[4][4] = {{5,7,8,6}, {4,6,5,7}, {3,9,6,8}, {2,4,7,5}};
    int *ptr = &pontos[0][0];
    int i, j;
    
    printf("Pontuacao:\n");
    for(i = 0; i < 4; i++) {
        for(j = 0; j < 4; j++) {
            printf("%d ", *(ptr + i*4 + j));
        }
        printf("\n");
    }
    
    int pares = 0, impares = 0;
    for(i = 0; i < 16; i++) {
        (*(ptr + i) % 2 == 0) ? pares++ : impares++;
    }
    printf("\nPares: %d, Impares: %d\n", pares, impares);
    
    int total_jogador[4] = {0};
    int vencedor = 0, max = 0;
    
    for(i = 0; i < 4; i++) {
        for(j = 0; j < 4; j++) {
            total_jogador[i] += *(ptr + i*4 + j);
        }
        if(total_jogador[i] > max) {
            max = total_jogador[i];
            vencedor = i;
        }
        printf("Jogador %d: %d pontos\n", i+1, total_jogador[i]);
    }
    printf("Vencedor: Jogador %d\n", vencedor+1);
    
    int total_set[4] = {0};
    int set_disputado = 0, max_set = 0;
    
    for(j = 0; j < 4; j++) {
        for(i = 0; i < 4; i++) {
            total_set[j] += *(ptr + i*4 + j);
        }
        if(total_set[j] > max_set) {
            max_set = total_set[j];
            set_disputado = j;
        }
        printf("Set %d: %d pontos\n", j+1, total_set[j]);
    }
    printf("Set mais disputado: %d\n", set_disputado+1);
    
    printf("\nMedia por jogador:\n");
    for(i = 0; i < 4; i++) {
        printf("Jogador %d: %.1f\n", i+1, total_jogador[i]/4.0);
    }
    
    int regular = 0, diff_min = 100;
    
    for(i = 0; i < 4; i++) {
        int min = 10, max = 0;
        for(j = 0; j < 4; j++) {
            int p = *(ptr + i*4 + j);
            if(p < min) min = p;
            if(p > max) max = p;
        }
        int diff = max - min;
        if(diff < diff_min) {
            diff_min = diff;
            regular = i;
        }
    }
    printf("Jogador mais regular: %d\n", regular+1);
    
    return 0;
}
