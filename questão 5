#include <stdio.h>

int main() {
    float notas[6];
    float temp;
    
    printf("=== COLETA DE NOTAS ===\n");
    
    for(int i = 0; i < 6; i++) {
        printf("Digite a nota do aluno %d: ", i + 1);
        scanf("%f", &notas[i]);
    }
    
    float *inicio = notas;
    float *fim = notas + 5; 

    while(inicio < fim) {
        temp = *inicio;
        *inicio = *fim;
        *fim = temp;
        
        inicio++;
        fim--;
    }
    
    printf("\n=== NOTAS INVERTIDAS ===\n");
    
    float *ptr = notas;
    for(int i = 0; i < 6; i++) {
        printf("Nota %d: %.2f\n", i + 1, *(ptr + i));
    }
    
    return 0;
}
